<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="500.0" prefWidth="400.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.emsi.subtracker.views.AddSubscriptionController">
   <children>
      <VBox layoutX="50.0" layoutY="30.0" spacing="20.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="30.0" AnchorPane.rightAnchor="30.0" AnchorPane.topAnchor="30.0">
         <children>
            <Label text="Nouvel Abonnement" textFill="#2c3e50">
               <font>
                  <Font name="System Bold" size="22.0" />
               </font>
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
            </Label>
            <VBox spacing="5.0">
               <children>
                  <Label text="Nom du service (ex: Netflix)" />
                  <TextField fx:id="txtNom" promptText="Entrez le nom" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="62.0" spacing="5.0">
               <children>
                  <Label text="Prix" />
                  <TextField fx:id="txtPrix" promptText="0.00" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="129.0" spacing="5.0">
               <children>
                  <Label text="Fréquence de paiement" />
                  <ComboBox fx:id="cmbFrequence" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="196.0" spacing="5.0">
               <children>
                  <Label text="Catégorie" />
                  <ComboBox fx:id="cmbCategorie" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
            <VBox layoutX="10.0" layoutY="196.0" spacing="5.0">
               <children>
                  <Label text="Date de début" />
                  <DatePicker fx:id="dateDebut" maxWidth="1.7976931348623157E308" />
               </children>
            </VBox>
            <HBox alignment="CENTER_RIGHT" spacing="10.0">
               <children>
                  <Button mnemonicParsing="false" onAction="#onBtnAnnulerClick" text="Annuler" />
                  <Button mnemonicParsing="false" onAction="#onBtnEnregistrerClick" style="-fx-background-color: #27ae60;" text="Enregistrer" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Button>
               </children>
               <VBox.margin>
                  <Insets top="20.0" />
               </VBox.margin>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
